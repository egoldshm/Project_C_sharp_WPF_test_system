<UserControl x:Class="PLWPF.myPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <PasswordBox x:Name="inputPassword" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25"/>
        <TextBox Visibility="Hidden"  x:Name="inputPassword_Text"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25"/>
        <Button Content="show password" FontSize="10" Background="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,3" Click="Button_Click_show" x:Name="password_hidder"/>
        <Button Content="generate password" FontSize="10" Background="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5,3" Click="Button_Click_generate"/>
    </Grid>
</UserControl>
