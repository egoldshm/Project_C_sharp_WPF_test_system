<Window x:Class="PLWPF.TraineeMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="TraineeMainWindow" Height="450" Width="800" >
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label Content="Welcome {0}" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="Dubai Medium" BorderBrush="#FFCCF123" BorderThickness="7"/>
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="Name:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" >
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="0" x:Name="name" Content ="name" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="Address:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" >
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="1" x:Name="Address" Content ="Address" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Phone number:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" >
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="2" x:Name="phonenumber" Content ="phonenumber" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="3" Content="Teacher's name:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" >
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="3" x:Name="teachersname" Content ="phonenumber" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="4" Content="Lesson num" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" >
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="4" x:Name="Lessonnum" Content ="Lessonnum" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>

                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Margin="5" Background="#FF49B3DA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition  Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Button x:Name ="testFuture" Content="SetTest" Grid.Row="0" Margin="4"/>
                    <Button Content="change details" Grid.Row="1" Margin="4"/>
                    <Button x:Name="lastTests" Content="See lasts tests" Grid.Row="2" Margin="4"/>
                    <Button Content="Button" Grid.Row="3" Margin="4"/>
                    <Button Content="Button" Grid.Row="4" Margin="4"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
