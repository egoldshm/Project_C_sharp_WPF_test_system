<Window x:Class="PLWPF.TraineeMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="TraineeMainWindow" MinHeight="600" MinWidth="700" FontFamily="Dubai Medium">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label Content="trainee mode" Margin="5,4" HorizontalAlignment="Left" VerticalContentAlignment="Top"/>
            <Label x:Name="LicenseLable" Content="you have no License" Margin="6,4" HorizontalAlignment="Right" VerticalContentAlignment="Top" Foreground="#FFCF2929" FontSize="15"/>

            <Label Content="Welcome {0}" x:Name="welcomeMessage" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="Dubai Medium" BorderBrush="#FFCCF123" BorderThickness="7"/>
            <Grid Grid.Row="1" x:Name="details" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
               <local:showInfoAboutTrainee Grid.Column="0" Grid.Row="1" />
                <Grid Grid.Row="1" Grid.Column="1" Margin="5" Background="#FF49B3DA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition  Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Button x:Name ="testFuture" Content="SetTest" Grid.Row="0" Margin="4" FontSize="20"/>
                    <Button Content="change details" Grid.Row="1" Margin="4" FontSize="20"/>
                    <Button x:Name="lastTests" Content="See lasts tests" Grid.Row="2" Margin="4" FontSize="20"/>
                    <Button Content="Button" Grid.Row="3" Margin="4" FontSize="20"/>
                    <Button Content="Button" Grid.Row="4" Margin="4" FontSize="20"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
