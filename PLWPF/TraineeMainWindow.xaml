<Window x:Class="PLWPF.TraineeMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="TraineeMainWindow" MinHeight="600" MinWidth="700" FontFamily="Dubai Medium">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label  Content="Welcome {0}" x:Name="welcomeMessage" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="Dubai Medium" BorderBrush="#FFCCF123" BorderThickness="7"/>
            <Grid Grid.Row="1" x:Name="details" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="ID:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="0" x:Name="id" Content ="{Binding Path=Id}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="Address:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="1" x:Name="Address" Content ="{Binding Path=Address}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Phone number:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True"/>
                    <Label Grid.Column="1" Grid.Row="2" x:Name="phonenumber" Content = "{Binding Path=PhoneNumber}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="3" Content="Teacher's name:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="3" x:Name="teachersname" Content = "{Binding Path=TeacherName}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="4" Content="Lesson num" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="4" x:Name="Lessonnum" Content = "{Binding Path=LessonsNumber}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="5" Content="car type" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="5" x:Name="cartype" Content = "{Binding Path=TypeCarLearned}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="6" Content="Transmission Learned" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="6" x:Name="TransmissionLearned" Content = "{Binding Path=TransmissionLearned}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="7" Content="School Name" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="7" x:Name="SchoolName" Content = "{Binding Path=SchoolName}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
                    <Label Grid.Column="0" Grid.Row="8" Content="Birthday:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" BorderBrush="#FF2673FB" BorderThickness="3" ClipToBounds="True" />
                    <Label Grid.Column="1" Grid.Row="8" x:Name="Birthday" Content = "{Binding Path=Birthday}" Margin="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>

                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Margin="5" Background="#FF49B3DA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition  Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Button x:Name ="testFuture" Content="SetTest" Grid.Row="0" Margin="4" FontSize="20"/>
                    <Button Content="change details" Grid.Row="1" Margin="4" FontSize="20"/>
                    <Button x:Name="lastTests" Content="See lasts tests" Grid.Row="2" Margin="4" FontSize="20"/>
                    <Button Content="Button" Grid.Row="3" Margin="4" FontSize="20"/>
                    <Button Content="Button" Grid.Row="4" Margin="4" FontSize="20"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
