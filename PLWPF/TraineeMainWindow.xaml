<Window x:Class="PLWPF.TraineeMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="TraineeMainWindow" Width="700" Height="400" MinHeight="700" MinWidth="400" FontFamily="Dubai Medium">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label Content="trainee mode" Margin="5,4" HorizontalAlignment="Left" VerticalContentAlignment="Top"/>
            <Label x:Name="LicenseLable" Content="you have no License" Margin="6,4" HorizontalAlignment="Right" VerticalContentAlignment="Top" Foreground="#FFCF2929" FontSize="15"/>

            <Label Content="Welcome {0}" x:Name="welcomeMessage" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="Dubai Medium" BorderBrush="#FFCCF123" BorderThickness="7"/>
            <Grid Grid.Row="1" x:Name="details" Margin="3">
                <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <TabItem Header="trainee info" >
                        <Grid>
                            <local:showInfoAboutTrainee />
                        </Grid>
                    </TabItem>
                    <TabItem x:Name ="testFuture" Header="see Test">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="update trainee">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="lastTests"/>

                </TabControl>

            </Grid>
        </Grid>
    </Grid>
</Window>
