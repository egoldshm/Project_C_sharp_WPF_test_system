<UserControl x:Class="PLWPF.AddLessonToTrainee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="trainee" Margin="20,20" SelectionChanged="trainee_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Copperplate Gothic Bold" FontSize="20"/>
        <Button x:Name="addLesson" FontSize="35" Visibility="Hidden" HorizontalContentAlignment="Center" Click="AddLesson_Click" Content="14" FontFamily="Cooper Black" ContentStringFormat="number of Lesson: {0}" Grid.Row='1' Margin="20,20" BorderBrush="{DynamicResource GoogleBlue}" Foreground="{DynamicResource GoogleGreen}"/>

    </Grid>
</UserControl>
