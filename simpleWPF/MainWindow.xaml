            </Grid.ColumnDefinitions>
            <Button Content="show all trainees" Grid.Column="0" />
            <Button Content="show all testers" Grid.Column="1" />
            <Button Content="show all tests" Grid.Column="2" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
